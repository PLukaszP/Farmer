WinManager:
    First:
    Second:
<First>:
    name: "first"
    player1_field: gracz1
    player2_field: gracz2
    player3_field: gracz3
    player4_field: gracz4
    canvas.before:
        Color:
            rgba : 0.3, 0.72, 0.15, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        size: root.width-50, root.height-50
        padding: 20
        spacing: 10
        cols: 1
        Label:
            text: "Mega super farmer"
            font_name: "Comic"
            font_size: 44
            size_hint: (.2, .2)
        GridLayout:
            padding: 20
            spacing: 10
            cols: 2
            Label:
                text: "Gracz 1"
                font_name: "Comic"
                font_size: 20
            TextInput:
                id: gracz1
                multiline: False
            Label:
                text: "Gracz 2"
                font_name: "Comic"
                font_size: 20
            TextInput:
                id: gracz2
                multiline: False
            Label:
                text: "Gracz 3"
                font_name: "Comic"
                font_size: 20
            TextInput:
                id: gracz3
                multiline: False
            Label:
                text: "Gracz 4"
                font_name: "Comic"
                font_size: 20
            TextInput:
                id: gracz4
                multiline: False
            Button:
                text: "Dodaj Graczy"
                font_size: 22
                size_hint: (.4, .4)
                on_release:
                    root.ustalGraczy()

            Label:
                id: label_list_of_players
                text: "Gracze:"
                font_name: "Comic"
                font_size: 16
        Button:
            id: start_btn
            text: "Start"
            font_size: 22
            size_hint: (.3, .3)
            disabled: True
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "up"
        Button:
            text: "Wyjdź z gry"
            font_size: 22
            size_hint: (.2, .2)
            on_release: app.stop()

